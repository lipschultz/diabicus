#:kivy 1.0.9

<Button>:
    color: .8,.9,0,1

<Light@Label>:
    text: 'O'
    color: .2, .2, .2, 1

<KeyButton@Button>
    font_size: 24

<EntryButton@KeyButton>
    on_press: app.press_key(self.text)

<EdgeButton@Button>
    font_size: 16

<EntryEdgeButton@KeyButton>
    on_press: app.press_key(self.text)


<NumberButton@EntryButton>
    background_color: 0.51, 0.88, 0.88, 1

<ArithmeticButton@EntryButton>
    background_color: 1, 0.69, 0.36, 1

<ArithmeticFunctionButton@KeyButton>
    background_color: 1, 0.69, 0.36, 1

<ConstantsEdgeButton@EntryEdgeButton>
    background_color: 0.42, 0.71, 0.71, 1

<FunctionEdgeButton@EdgeButton>
    background_color: 0.82, 0.57, 0.29, 1

<RightSide@BoxLayout>
    orientation: 'vertical'
    size_hint_x: 0.1
    Light
    Light
    Light
    FunctionEdgeButton:
        text: 'sin([i]x[/i])'
        markup: True
        on_press: app.press_function_key('sin')
    FunctionEdgeButton:
        text: 'cos([i]x[/i])'
        markup: True
        on_press: app.press_function_key('cos')
    FunctionEdgeButton:
        text: 'tan([i]x[/i])'
        markup: True
        on_press: app.press_function_key('tan')
    EdgeButton:
        background_color: 0.82, 0.57, 0.29, 1
        text: '[i]x[/i]×10^[i]y[/i]'
        markup: True
        on_press: app.press_key('×10^')
    Light
    Light
    Light
    Light

<TopBottomLights@BoxLayout>
    orientation: 'horizontal'
    size_hint_y: 0.2
    Light
    Light
    Light
    Light
    Light
    Light
    Light
    Light
    Light
    Light
    Light

<LeftSide@BoxLayout>
    orientation: 'vertical'
    size_hint_x: 0.1
    EntryEdgeButton:
        text: 'S'
    Light
    Light
    ConstantsEdgeButton:
        text: 'π'
    ConstantsEdgeButton:
        text: 'τ'
    ConstantsEdgeButton:
        text: 'e'
    ConstantsEdgeButton:
        text: 'i'
    ConstantsEdgeButton:
        text: 'φ'
    Light
    Light
    Light

<BasicKeypad@GridLayout>
    cols: 5

    KeyButton:
        id: clear_button
        text: 'Clear'
        markup: True
        halign: 'center'
        on_press: app.clear()
    KeyButton:
        text: 'Bksp'
        on_press: app.bksp()
    KeyButton:
        id: answer_button
        text: 'Ans\n[size=16](0)[/size]'
        markup: True
        halign: 'center'
        valign: 'middle'
        on_press: app.press_ans()
    KeyButton:
        text: '<-'
    KeyButton:
        text: '->'

    NumberButton:
        text: '7'
    NumberButton:
        text: '8'
    NumberButton:
        text: '9'
    ArithmeticButton:
        text: '+'
    ArithmeticButton:
        text: '('

    NumberButton:
        text: '4'
    NumberButton:
        text: '5'
    NumberButton:
        text: '6'
    ArithmeticButton:
        text: '-'
    ArithmeticButton:
        text: ')'

    NumberButton:
        text: '1'
    NumberButton:
        text: '2'
    NumberButton:
        text: '3'
    ArithmeticButton:
        text: '×'
    ArithmeticButton:
        text: '^'

    NumberButton:
        text: '0'
    NumberButton:
        text: '.'
    KeyButton:
        text: '='
        on_press: app.calculate()
        background_color: 0, 0, 0, 1
    ArithmeticButton:
        text: '/'
    ArithmeticFunctionButton:
        text: 'ln([i]x[/i])\n[size=16](Natural Log)[/size]'
        markup: True
        halign: 'center'
        valign: 'middle'
        on_press: app.press_function_key('ln')



<CalcMainLayout>:
    orientation: 'horizontal'

    LeftSide

    BoxLayout:
        orientation: 'vertical'

        TopBottomLights

        Label:
            id: input
            text: ''
            markup: True
            font_size: 16
            text_size: self.size
            halign: 'left'
            valign: 'middle'
            size_hint_y: 0.0475
        Label:
            id: output
            text: ''
            markup: True
            font_size: 20
            text_size: self.size
            halign: 'right'
            valign: 'middle'
            size_hint_y: 0.1
        Label:
            id: fact
            text: ''
            markup: True
            font_size: 12
            text_size: self.size
            halign: 'center'
            valign: 'top'
            size_hint_y: 0.0475

        BasicKeypad:
            id: basic_keypad

        TopBottomLights

        Label:
            id: music_display
            text: ''
            font_size: 12
            halign: 'center'
            valign: 'top'
            size_hint_y: 0.0475

    RightSide
